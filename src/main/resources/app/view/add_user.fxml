<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.controller.AddUserController"
      alignment="CENTER" prefWidth="360" prefHeight="220">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add new user" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#onSaveClick"/>
        <Button text="Cancel" onAction="#onCancelClick"/>
    </HBox>
</VBox>
